<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Olympus Zeus Core">
  <description>Olympus Zeus Core coding standard in PSR2.</description>

  <exclude-pattern>.git/*</exclude-pattern>
  <exclude-pattern>app/cache/*</exclude-pattern>
  <exclude-pattern>app/logs/*</exclude-pattern>
  <exclude-pattern>src/Zeus/Control/Controller/Control.php</exclude-pattern>
  <exclude-pattern>src/Zeus/Control/Implementation/ControlImplementation.php</exclude-pattern>
  <exclude-pattern>src/Zeus/Resources/templates/customizer/*</exclude-pattern>
  <exclude-pattern>src/Zeus/WalkerSingle/Controller/WalkerSingle.php</exclude-pattern>
  <exclude-pattern>src/Zeus/WalkerSingle/Implementation/WalkerSingleImplementation.php</exclude-pattern>
  <exclude-pattern>src/Zeus/Widget/Controller/Widget.php</exclude-pattern>
  <exclude-pattern>src/Zeus/Widget/Implementation/WidgetImplementation.php</exclude-pattern>
  <exclude-pattern>vendor/*</exclude-pattern>

  <arg name="report-width" value="auto"/>
  <arg value="-colors"/>
  <arg value="np"/>

  <rule ref="PSR2"/>
</ruleset>
